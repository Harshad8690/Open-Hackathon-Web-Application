@model HackathonRegistrationViewModel

<div class="loder"></div>
<div class="modal fade" id="submit-application" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="submit-application-label">Register</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Register" method="post" autocomplete="off">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        Are you sure you want to register?
                        <input type="hidden" asp-for="HackathonId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="submit-application-btn" data-save="modal">Yes</button>
            </div>
        </div>
    </div>
</div>
<link href="~/css/preloader.css" rel="stylesheet" />
<script src="~/js/jquery.preloader.js" type="text/javascript"></script>
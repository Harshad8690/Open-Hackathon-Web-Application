@model OpenHackathonWeb.Models.SetPrizeViewModel

@{
    ViewData["Title"] = "SetPrize";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="SetPrize">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">                
                <input type="hidden" asp-for="HackathonId" />
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Set Prize" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a>
</div>

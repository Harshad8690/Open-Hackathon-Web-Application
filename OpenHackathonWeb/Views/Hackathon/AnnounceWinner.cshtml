@model OpenHackathonWeb.Models.AnnounceWinnerViewModel

@{
    ViewData["Title"] = "AnnounceWinner";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AnnounceWinner" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="HackathonId" />
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="WinnerWalletAddress" class="control-label"></label>
                    <input asp-for="WinnerWalletAddress" class="form-control" />
                    <span asp-validation-for="WinnerWalletAddress" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                @Html.DropDownList("WinnerWalletAddress", (IEnumerable<SelectListItem>)ViewBag.RegisteredUsers, new { @class = "form-control" })
                <span asp-validation-for="WinnerWalletAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Announce" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a>
</div>
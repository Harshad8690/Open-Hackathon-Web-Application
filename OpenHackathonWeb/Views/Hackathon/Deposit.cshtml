@model OpenHackathonWeb.Models.DepositFundViewModel

@{
    ViewData["Title"] = "Deposite";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposite" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a>
</div>

